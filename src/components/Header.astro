---
import { ThemeToggle } from './ThemeToggle.jsx';
import HeaderInteractive from './HeaderInteractive';
import { info } from './info';
---

<header class="bg-white dark:bg-gray-900 shadow-lg sticky top-0 z-50" role="banner">
  <!-- Top bar with contact info -->
  <div class="bg-gateway-blue text-white py-2 px-4">
    <div class="max-w-7xl mx-auto flex flex-col sm:flex-row justify-between items-center text-sm">
      <div class="flex items-center space-x-4 mb-2 sm:mb-0">
        <a href="tel:+593212345678" class="flex items-center hover:text-gateway-secondary transition-colors" aria-label="Llamar a Gateway Corporation">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          {info.contactPhone}
        </a>
        <a href="mailto:info@gateway-corporation.com" class="flex items-center hover:text-gateway-secondary transition-colors" aria-label="Enviar email a Gateway Corporation">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
          </svg>
          {info.contactEmail}
        </a>
