---
import { ThemeToggle } from './ThemeToggle.jsx';
import HeaderInteractive from './HeaderInteractive';
import { info } from './info';
---

<header class="bg-white dark:bg-gray-900 shadow-lg sticky top-0 z-50" role="banner">
  <!-- Top bar with contact info -->
  <div class="bg-gateway-blue text-white py-2 px-4">
    <div class="max-w-7xl mx-auto flex flex-col sm:flex-row justify-between items-center text-sm">
      <div class="flex items-center space-x-4 mb-2 sm:mb-0">
        <a href="tel:+593212345678" class="flex items-center hover:text-gateway-secondary transition-colors" aria-label="Llamar a Gateway Corporation">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          {info.contactPhone}
        </a>
        <a href="mailto:info@gateway-corporation.com" class="flex items-center hover:text-gateway-secondary transition-colors" aria-label="Enviar email a Gateway Corporation">
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
          </svg>
          {info.contactEmail}
        </a>
      </div>
      <div class="flex items-center space-x-3">
        <span class="text-sm">Síguenos:</span>
        <div class="flex space-x-2">
          <a href={`${info.socialMediaLinks.facebook}`} class="hover:text-gateway-secondary transition-colors" aria-label="Gateway Corporation en Facebook">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href={`${info.socialMediaLinks.instagram}`} class="hover:text-gateway-secondary transition-colors" aria-label="Gateway English en Instagram">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987c6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.647.001 12.017.001zM8.449 16.988c-1.297 0-2.348-1.051-2.348-2.348c0-1.297 1.051-2.348 2.348-2.348c1.297 0 2.348 1.051 2.348 2.348C10.797 15.937 9.746 16.988 8.449 16.988z"/>
            </svg>
          </a>
          <a href={`${info.socialMediaLinks.linkedin}`} class="hover:text-gateway-secondary transition-colors" aria-label="Gateway Corporation en LinkedIn">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
           <a href={`${info.socialMediaLinks.tiktok}`} class="hover:text-gateway-secondary transition-colors" aria-label="Gateway Corporation en LinkedIn">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Main navigation -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-2" aria-label="Gateway Corporation - Inicio">
          <img 
            src="/logo/LOGO GATEWAY CORPORATION Signed.png" 
            alt="Gateway Corporation Logo"
            class="h-12 w-auto dark:hidden"
          />
          <img 
            src="/logo/LOGO GATEWAY CORPORATION Signed BLANCO.png" 
            alt="Gateway Corporation Logo"
            class="h-12 w-auto hidden dark:block"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8" role="navigation" aria-label="Navegación principal">
        <a href="#home" class="text-gray-700 dark:text-gray-300 hover:text-gateway-blue dark:hover:text-gateway-blue-light transition-colors duration-200 relative group">
          Inicio
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gateway-blue transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#programs" class="text-gray-700 dark:text-gray-300 hover:text-gateway-blue dark:hover:text-gateway-blue-light transition-colors duration-200 relative group">
          Programas
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gateway-blue transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#about" class="text-gray-700 dark:text-gray-300 hover:text-gateway-blue dark:hover:text-gateway-blue-light transition-colors duration-200 relative group">
          Nosotros
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gateway-blue transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#promotions" class="text-gray-700 dark:text-gray-300 hover:text-gateway-blue dark:hover:text-gateway-blue-light transition-colors duration-200 relative group">
          Promociones
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gateway-blue transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#testimonials" class="text-gray-700 dark:text-gray-300 hover:text-gateway-blue dark:hover:text-gateway-blue-light transition-colors duration-200 relative group">
          Testimonios
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gateway-blue transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#student-system" class="text-gray-700 dark:text-gray-300 hover:text-gateway-blue dark:hover:text-gateway-blue-light transition-colors duration-200 relative group">
          Sistema
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gateway-blue transition-all duration-200 group-hover:w-full"></span>
        </a>
        <a href="#contact" class="text-gray-700 dark:text-gray-300 hover:text-gateway-blue dark:hover:text-gateway-blue-light transition-colors duration-200 relative group">
          Contacto
          <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gateway-blue transition-all duration-200 group-hover:w-full"></span>
        </a>
        <ThemeToggle client:load />
      </nav>

      <!-- Mobile menu button and Interactive Components -->
      <HeaderInteractive client:load />
    </div>
  </div>
</header>